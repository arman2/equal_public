
@{
    ViewBag.Title = "Sign up";
    Layout = null;
}

<!doctype html>
<html class="no-js" lang="">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>
        @ViewBag.Title
    </title>
    <meta name="description" content="">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <!-- CSS  -->
    <link href="~/Content/CSS/materialize.min.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <script src="~/Content/JS/materialize.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<style>
    body {
        background: url('/Content/Images/loginbg.jpg');
        background-repeat: no-repeat;
        background-position: center;
        -ms-background-size: cover;
        background-size: cover;
        background-color: #00a99d;
        height: 100%;
        width: 100%;
        overflow: hidden;
        display: flex;
        min-height: 100vh;
        flex-direction: column;
    }

    .login {
        height: 560px;
        display: block;
        border-radius: 0;
        margin: auto;
        top: 0;
        bottom: 0;
        right: 0;
        left: 0;
        padding: 20px;
        position: absolute;
        width: 300px;
        background-color: #fff;
    }

    .modal-header-icon {
        display: block;
        height: 30px;
        transform: scale(.8,.8);
        /*Firefox*/
        -moz-transform: scale(.8,.8);
        /*Microsoft Internet Explorer*/
        -ms-transform: scale(.8,.8);
        /*Chrome, Safari*/
        -webkit-transform: scale(.8,.8);
        /*Opera*/
        -o-transform: scale(.8,.8);
    }

    .modal-header-icon-bg {
        background-color: #0277bd;
        width: 80px;
        height: 80px;
        border-radius: 50%;
        color: #fff;
        margin: auto;
        position: relative;
        top: -70px;
    }

    .modal-header-icon-bg {
        top: -4px;
        position: relative;
    }

        .modal-header-icon-bg i {
            position: relative;
            top: -4px;
            left: 10px;
        }

    .logo {
        text-align: center;
    }

        .logo img {
            width: 100px;
        }

    /*input[placeholder] {
        text-align: center;
    }*/

    button {
        font-size: 16px;
        width: 100%;
    }

    .options {
        margin-bottom: 10px;
        margin-top: 6px;
    }

        .options p {
            display: inline-block;
            margin-right: 23px;
        }

        .options a {
            font-size: 14px;
        }
</style>


<body>
    <!--[if lt IE 8]>
        <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
<div class="login">
    <div class="modal-header-icon">
        <div class="modal-header-icon-bg" style="top: -66px;">
            <i class="mdi-social-person-add medium"></i>
        </div>
    </div>
    <div class="logo">
        <img src="/Content/Images/logo3.png">
    </div>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {   
        @Html.AntiForgeryToken()
        <div class="input-field">
                   
                   
            <i class="mdi-communication-email prefix"></i>
            <input placeholder="Email" data-tooltip="Pleaes enter your edu email address." data-position="right" type="email" name="Email" class="validate tooltipped">
        </div>
        <div class="input-field">
            <i class=" mdi-hardware-security prefix"></i>
            <input placeholder="Password" type="password" name="Password" class="validate tooltipped" data-tooltip="Should be at least 6 characters" data-position="right">
        </div>
        <div class="input-field">
            <i class=" mdi-navigation-check prefix"></i>
            <input placeholder="Confirm Password" type="password" name="PasswordConfirmation" class="validate">
        </div>
        <div class="input-field">
            <i class="mdi-image-timer-auto prefix"></i>
            <input placeholder="First Name" type="text" name="FirstName" class="validate">
        </div>
        <div class="input-field">
            <i class="mdi-action-account-circle prefix"></i>
            <input placeholder="Last Name" type="text" name="LastName" class="validate">
        </div>
        <button class="btn waves-effect waves-light orange" type="submit" name="action">
            Register
        </button>
    }
</div>
</body>
</html>
