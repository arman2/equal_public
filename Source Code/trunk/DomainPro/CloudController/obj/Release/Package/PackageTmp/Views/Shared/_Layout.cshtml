                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("eQual", "Index", "Home", null, new {@class = "navbar-brand"})
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                    </ul>
                </div>
            </div>
        </div>*@

    <div class="container body-content">
        @RenderBody()

    </div>
    <footer class="page-footer orange">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">Why eQual? </h5>
                    <p class="grey-text text-lighten-4">Explore, optimize, and deliver better products.</p>
                </div>
                <div class="col l4 offset-l2 s12">
                    <h5 class="white-text">External Links</h5>
                    <ul>
                        <li><a class="grey-text text-lighten-3" href="http://shahbazian.me">Arman Shahbazian</a></li>
                        <li><a class="grey-text text-lighten-3" href="http://softarch.usc.edu">Software Architecture Research Group</a></li>
                        <li><a class="grey-text text-lighten-3" href="http://cs.usc.edu">Computer Science Department of USC</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                <p>&copy; @DateTime.Now.Year - eQual- A SoftArch Research Project</p>
                <a class="grey-text text-lighten-4 right" href="#!">More Links</a>
            </div>
        </div>
    </footer>
        @Scripts.Render("~/bundles/kendo")

    @RenderSection("Scripts")
    <script>
        if (!String.prototype.supplant) {
            String.prototype.supplant = function (o) {
                return this.replace(/{([^{}]*)}/g,
                    function (a, b) {
                        var r = o[b];
                        return typeof r === 'string' || typeof r === 'number' ? r : a;
                    }
                );
            }
        }
        (function ($) {
            $(function () {
                $('.button-collapse').sideNav();
            }); // end of document ready
        })(jQuery); // end of jQuery name space</script>
</body>
</html>